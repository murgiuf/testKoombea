<header class="main-header">

  <!-- Logo -->
  <a href="<%= root_path %>" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini">
      <b>IC</b>
    </span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg">
      <b>iContactos</b>
    </span>
  </a>

  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <% if user_signed_in? %>
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
        <i class="fa fa-bars"></i>
        <span class="sr-only">Toggle navigation</span>
      </a>
    <% end %>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown messages-menu">
          <a href="<%= root_path %>" placeholder="Inicio">
            <i class="fa fa-home"></i>
          </a>
        </li>

      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <!-- User Account: style can be found in dropdown.less -->
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="hidden-xs">
                <%= current_user.email %></span>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header">
                <p>
                  <%= current_user.email %>
                </p>
              </li>
              <!-- Menu Body -->
              <li class="user-body">

                <div class="row">
                  <div class="col-md-12">
                    <%= link_to "Cerrar sesión", destroy_user_session_url, method: :delete, :class => "btn btn-default btn-flat" %>
                  </div>
                </div>
                <!-- /.row -->
              </li>
              <!-- Menu Footer-->

            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to "Crear cuenta", new_user_registration_path %>
          </li>
          <li>
            <%= link_to "Iniciar sesión", new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </div>

  </nav>
</header>
<script type="text/javascript">
  $(document).ready(function() {
		//$('table').cardtable();
		$('.table').cardtable();
	})
</script>
<style>
  .navbar-nav>.user-menu>.dropdown-menu>li.user-header {
    height: 100%;
  }
</style>
