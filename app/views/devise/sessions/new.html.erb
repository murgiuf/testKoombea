<br>
<div class="login-box">
  <div class="login-logo">
    <b>Inicio de sesión</b>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg"></p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "login-form"}) do |f| %>
    <div class="form-group has-feedback">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-user"></i>
        </span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", placeholder: "Email" %>
      </div>
    </div>
    <div class="form-group has-feedback">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-lock"></i>
        </span>
        <%= f.password_field :password, autocomplete: "current-password", :class => "form-control", placeholder: "Contraseña" %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me, :class => "pull-left checkbox-inline" %>

          <%= f.label :remember_me , "Recuérdame" %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= f.submit "Iniciar sesión", :class => "btn btn-primary btn-block btn-flat" %>
      </div>
      <!-- /.col -->
    </div>
  <% end %>
  <!-- /.social-auth-links -->
  <%= render "devise/shared/links" %>
</div>
<!-- /.login-box-body -->
</div>
<!-- /.login-box -->
