
<br>

<div class="register-box">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "signup-form"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class="text-center"><b>Registro de Cuenta</b></h2>


  <div class="form-group">
      <strong>Correo</strong>
    <div class="input-group">
      <span class="input-group-addon">
        <i class="fa fa-user"></i>
      </span>
      <% email = params[:user].blank? ? "" : params[:user][:email] %>
      <%= f.email_field :email, value: email, autocomplete: "email", :class => "form-control", placeholder: "Email" %>
    </div>
    <!--<span class="icon is-small is-left"> <i class="fas fa-user"></i> </span>-->
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>
        caracteres mínimo)</em>
    <% end %><br/>
    <div class="input-group">
      <span class="input-group-addon">
        <i class="fa fa-lock"></i>
      </span>
      <%= f.password_field :password, autocomplete: "new-password", :class => "form-control", placeholder: "Contraseña" %>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon">
        <i class="fa fa-check"></i>
      </span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control", placeholder: "Confirmación de contraseña" %>
    </div>
  </div>



  <div class="row">
    <div class="col-xs-12">
      <%= f.submit "Registrar cuenta", :class => "btn btn-primary btn-block btn-flat", id: "btnRegistro" %>
    </div>
    <!-- /.col -->
  </div>
<% end %>
<p class="text-center">
  <%= render "devise/shared/links" %>
</p>
</div>
<!-- /.register-box -->
